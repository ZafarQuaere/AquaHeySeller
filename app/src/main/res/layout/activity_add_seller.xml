<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_theme"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        android:id="@+id/lyHeader"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/lytTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10dp">


            <EditText
                android:id="@+id/editSellerName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_field_height"
                android:background="@drawable/rectangle_bg"
                android:elevation="@dimen/_10dp"
                android:gravity="center_horizontal"
                android:hint="@string/sellername"
                android:inputType="text"
                android:maxLength="35"
                android:maxLines="1"
                android:paddingVertical="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="@color/color_black"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/editSellerMobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_field_height"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/rectangle_bg"
                android:elevation="@dimen/_10dp"
                android:gravity="center_horizontal"
                android:hint="@string/enter_mobile_no"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingVertical="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="@color/color_black"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnAddSeller"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginHorizontal="@dimen/_20dp"
                android:layout_marginTop="@dimen/_30dp"
                android:background="@drawable/btnsignin"
                android:elevation="@dimen/_10dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="@string/add_seller"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

