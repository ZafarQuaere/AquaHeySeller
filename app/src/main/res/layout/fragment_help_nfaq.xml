<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:padding="@dimen/_20dp"
    android:clickable="true"
    tools:context=".ui.fragments.HelpNFaqFragment">


    <TextView
        android:id="@+id/textContact"
        style="@style/LargeTextview"
        android:drawableStart="@drawable/ic_my_account"
        android:drawablePadding="@dimen/drawable_padding"
        android:text="@string/contact_us"
        android:textColor="@color/colorBlack" />

    <TextView
        style="@style/RegularTextview"
        android:layout_marginTop="@dimen/_30dp"
        android:autoLink="phone"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:text="Contact : +91-8444040514"
        android:textColor="@color/colorBlack" />

    <TextView
        style="@style/RegularTextview"
        android:layout_marginTop="@dimen/_20dp"
        android:autoLink="email"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:text="Email : aquahey.help@gmail.com"
        android:textColor="@color/colorBlack" />


    <TextView
        style="@style/RegularTextview"
        android:layout_marginTop="@dimen/_20dp"
        android:autoLink="web"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:text="Visit Website : http://www.google.com"
        android:textColor="@color/colorBlack" />


    <TextView
        style="@style/RegularTextview"
        android:layout_marginTop="@dimen/_10dp"
        android:autoLink="web"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:text="Like Us on Facebook"
        android:textColor="@color/colorBlack" />

    <TextView
        style="@style/RegularTextview"
        android:layout_marginTop="@dimen/_20dp"
        android:autoLink="web"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:text="Follow Us on Twitter"
        android:textColor="@color/colorBlack" />


    <TextView
        style="@style/RegularTextview"
        android:layout_marginTop="@dimen/_20dp"
        android:autoLink="web"
        android:drawableStart="@drawable/ic_settings"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:text="Rate Us on Play Store"
        android:textColor="@color/colorBlack" />

</LinearLayout>