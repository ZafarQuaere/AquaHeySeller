<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <include
        android:id="@+id/lyHeader"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyHeader"
        android:layout_marginTop="@dimen/_20dp"
        android:padding="@dimen/_10dp"
        android:text="@string/sit_back_and_relax_while_we_verify_your_mobile_number_and_send_otp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/editMobile"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_20dp"
        android:background="@drawable/shape_oval_white"
        android:padding="20dp"
        android:src="@drawable/icon_otp" />

    <EditText
        android:id="@+id/editMobile"
        android:layout_width="310dp"
        android:layout_height="@dimen/edit_field_height"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle_bg"
        android:ems="10"
        android:hint="@string/enter_registered_mobile_no"
        android:inputType="number"
        android:maxLength="10"
        android:textAlignment="center" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="171dp"
        android:layout_height="@dimen/button_height"
        android:layout_below="@+id/editMobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/btnsignin"
        android:text="@string/submit"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
