<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_corner_bg">

    <TextView
        android:id="@+id/text_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dialog_log_out_text_margin"
        android:gravity="center"
        android:textColor="@color/dialog_text_color"
        android:textSize="@dimen/dialog_log_out_text_size" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_log_out_separator_height"
        android:layout_below="@+id/text_message"
        android:layout_marginTop="@dimen/dialog_log_out_separator_margin_top"
        android:background="@color/dialog_log_out_separator_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_log_out_btn_layout_height"
        android:layout_below="@+id/separator"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_log_out_btn_yes_height"
            android:layout_weight=".5"
            android:background="@android:color/transparent"
            android:text="@string/dialog_log_out_btn_yes_text"
            android:textColor="@color/dialog_log_out_btn_text_color"
            android:textSize="@dimen/dialog_log_out_btn_text_size" />

        <View
            android:id="@+id/btn_separator"
            android:layout_width="@dimen/dialog_log_out_separator_height"
            android:layout_height="match_parent"
            android:layout_below="@+id/text_message"
            android:background="@color/dialog_log_out_separator_color" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_log_out_btn_no_height"
            android:layout_weight=".5"
            android:background="@android:color/transparent"
            android:text="@string/dialog_log_out_btn_no_text"
            android:textColor="@color/dialog_log_out_btn_text_color"
            android:textSize="@dimen/dialog_log_out_btn_text_size" />

    </LinearLayout>

</RelativeLayout>