<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_theme"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/lytHeader"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lytHeader"
        android:layout_above="@+id/btnRegister">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20dp"
            android:paddingHorizontal="@dimen/_30dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lyHeader"
                android:padding="@dimen/_10dp"
                android:text="@string/register_to_use_aqua_hey"
                android:textAlignment="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_20sp" />


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_20dp"
                android:elevation="@dimen/_10dp"
                android:src="@drawable/icon_drops" />


            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_field_height"
                android:background="@drawable/rectangle_bg"
                android:drawableRight="@android:drawable/ic_menu_search"
                android:drawablePadding="@dimen/_10dp"
                android:elevation="@dimen/_10dp"
                android:hint="@string/gst_no"
                android:imeOptions="actionSearch"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_field_height"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/rectangle_bg"
                android:elevation="@dimen/_10dp"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editMobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_field_height"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/rectangle_bg"
                android:elevation="@dimen/_10dp"
                android:ems="10"
                android:hint="@string/mobile_no"
                android:inputType="number"
                android:maxLength="10"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editEmailId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_field_height"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/rectangle_bg"
                android:elevation="@dimen/_10dp"
                android:ems="10"
                android:hint="@string/email_id"
                android:inputType="textEmailAddress"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_field_height"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/rectangle_bg"
                android:elevation="@dimen/_10dp"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textAlignment="center" />


            <EditText
                android:id="@+id/editConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_field_height"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/rectangle_bg"
                android:elevation="@dimen/_10dp"
                android:ems="10"
                android:hint="@string/confirm_pswd"
                android:inputType="textPassword"
                android:textAlignment="center" />


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btnsignin"
        android:elevation="@dimen/_10dp"
        android:text="@string/signup_label"
        android:textColor="@color/color_white" />
</RelativeLayout>

